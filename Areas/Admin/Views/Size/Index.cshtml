@model List<Size>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <h4 class="card-title">Size Table</h4>
                <a class="btn btn-success" asp-action="create">Create</a>
                <div class="table-responsive w-100 mx-auto">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Size item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.CreatedAt.ToString("d MMMM yyy HH:mm")
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-pen"></i></a>
                                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i> </a>
                                        <a asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-information-outline"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>