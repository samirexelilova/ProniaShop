@model List<GetProductVM>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories Table</h4>
                <a class="btn btn-success" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    SKU
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetProductVM item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@item.MainImage">
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        @item.SKU
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-pen"></i></a>
                                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i> </a>
                                        <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>