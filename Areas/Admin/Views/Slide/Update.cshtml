@model UpdateSlideVM

<div class="row">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update category</h4>
                <form method="post" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <img width="200px" height="150px" src="~/assets/images/website-images/@Model.Image" />
                        <input asp-for="Image" type="hidden" value="@Model.Image" class="form-control" placeholder="Photo">
                         </div>
                        <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" accept="image/*" class="form-control" placeholder="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubTitle">SubTitle</label>
                        <input asp-for="SubTitle" class="form-control" placeholder="SubTitle">
                        <span class="text-danger" asp-validation-for="SubTitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order">Order</label>
                        <input asp-for="Order" class="form-control" placeholder="Order">
                        <span class="text-danger" asp-validation-for="Order"></span>
                    </div>
             
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" rows="14" class="form-control" placeholder="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>


                    <button type="submit" class="btn btn-primary me-2 mt-4">Submit</button>
                    <button class="btn btn-light mt-4">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
