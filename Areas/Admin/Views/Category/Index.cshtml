
@model List<Category>

@{
    int count = 0;
}
<div class="row"> 
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories Table</h4>
                <a class="btn btn-success" href="#">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Products.Count
                                    </td>
                                    <td>
                                        @item.CreatedAt.ToString("d MMMM yyy HH:mm")
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" href="#"><i class="mdi mdi-pen"></i></a>
                                        <a class="btn btn-danger" href="#"><i class="mdi mdi-delete"></i> </a>
                                        <a class="btn btn-primary" href="#"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }
                         
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>